<div class="row">
  <div class="col-md-12">
    <h5>Demande de congé</h5>
    <div class="errors">
      <ul class="">
        <% if @demande and @demande.errors %>
          <% @demande.errors.full_messages.each do |erreur| %>
          <li class="warning"><%= erreur %></li>
          <% end %>
        <% end %>

      </ul>
    </div>
    <%=  form_with(model: Demande, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :debut  %>
        <%= form.date_field :debut, id: :debut_conge , class: 'form-control'%>
      </div>
      <div class="form-group">
        <%= form.label :fin %>
        <%= form.date_field :fin, id: :fin_conge, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :nombre_de_jours %>
        <%= form.number_field :nb_jours, id: :nb_jours, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :type_de_congé %>
        <%= form.select :type_conges,list_type_conges, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :motif  %>
        <%= form.text_field :motif, id: :motif, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit 'Envoyer', class: ' btn btn-primary'  %>
      </div>
    <% end %>
  </div>
</div>
