<div class="row">
  <div class="col-md-12">
    <div class="">
      <% flash.each do |key,msg| %>
        <div class="alert alert-<%= key %>">
          <%= msg %>
        </div>
      <% end %>
    </div>
    <div class="">
      <table class="table table-stripped">
        <thead>
          <tr>
            <th>Debut </th>
            <th>Fin </td>
            <th>Nombre de jours </th>
            <th>Type de cong√© </th>
            <th>Collaborateur </th>
            <th>Actions</th>
          </tr>
        </thead>
        <% @demandes.each do |demande| %>
        <tr>

          <td><%= demande.debut.strftime('%d %B %Y') %></td>
          <td><%= demande.fin.strftime('%d %B %Y') %></td>
          <td><%= demande.nb_jours %></td>
          <td><%= demande.nom_type_conges%></td>
          <td><%= demande.utilisateur.prenom + ' ' +demande.utilisateur.nom%></td>
          <td>
            <%= link_to '', show_demande_path(demande.id), class: 'fa fa-eye' %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<div class="modal fade" id="refus-popup" tabindex="-1" role="dialog" aria-labelledby="myLabel" aria-hidden="true">
</div>
